<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_664"
    android:layout_height="@dimen/px_288"
    android:background="@drawable/with_draw_card_red_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/deleteCard"
        android:layout_width="@dimen/px_37"
        android:layout_height="@dimen/px_37"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/px_29"
        android:layout_marginTop="@dimen/px_35"
        android:src="@mipmap/tixian_yhk_delete_btn_" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_42">

        <TextView
            android:id="@+id/cardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_33"
            android:text="csdds"
            android:textColor="@color/white"
            android:textSize="@dimen/px_43" />

        <TextView
            android:id="@+id/cardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardName"
            android:layout_marginLeft="@dimen/px_68"
            android:layout_toRightOf="@id/cardName"
            android:text="csdds"
            android:textColor="@color/white"
            android:textSize="@dimen/px_29" />

        <TextView
            android:id="@+id/isDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_32"
            android:text="默认卡"
            android:textColor="@color/white"
            android:textSize="@dimen/px_29" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_32"
        android:layout_marginRight="@dimen/px_32"
        android:layout_marginTop="@dimen/px_40"
        android:text="**** **** **** **** 0567"
        android:textColor="@color/white"
        android:textSize="@dimen/px_43" />
</LinearLayout>
