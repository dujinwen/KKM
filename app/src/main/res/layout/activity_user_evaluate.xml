<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/titleLayout"
        layout="@layout/layout_title_bar" />

    <com.kekemei.kekemei.view.IndictorWithNumber
        android:id="@+id/indictor_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_173"
        android:layout_below="@+id/titleLayout"
        android:visibility="gone"
        app:pstsDividerColor="#00000000"
        app:pstsIndicatorColor="#ECF9F9"
        app:pstsIndicatorHeight="0dp"
        app:pstsTabPaddingLeftRight="@dimen/work_order_list_indictor_padding_left"
        app:pstsTextSize="@dimen/work_order_list_indictor_text_size"
        app:pstsUnderlineColor="#e5e6e8"
        app:pstsUnderlineHeight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/indictor_tabs"
        android:background="@color/white"
        android:orientation="vertical">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/swipe_rfresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.kekemei.kekemei.view.MultipleStatusView
        android:id="@+id/multiple_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/indictor_tabs" />
</RelativeLayout>
