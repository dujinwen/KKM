<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_order_icon"
        android:layout_width="@dimen/px_317"
        android:layout_height="@dimen/px_269"
        android:layout_marginLeft="@dimen/px_37"
        android:layout_marginTop="@dimen/px_43"
        android:background="@mipmap/orderform_determine_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_39"
        android:layout_marginRight="@dimen/px_48"
        android:layout_marginTop="@dimen/px_70"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_104"
            android:text="【爆款】肩颈+腰部+背部+足底+全身放松"
            android:textColor="#FF000000"
            android:textSize="@dimen/px_42" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_74"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 160"
                android:textColor="#FFFF6C70" />

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_72"
                android:text="X2"
                android:textColor="#FFA3A3A3"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_jian"
                    android:layout_width="@dimen/px_58"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_72"
                    android:background="@drawable/btn_line_background"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="@dimen/px_130"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_line_background"
                    android:gravity="center"
                    android:text="2" />

                <TextView
                    android:id="@+id/tv_jia"
                    android:layout_width="@dimen/px_58"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_line_background"
                    android:gravity="center"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>