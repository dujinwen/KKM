<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_dianpu_tab"
    android:layout_height="match_parent"
    android:layout_marginTop="482px"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e6e8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="282px"
            android:paddingTop="102px"
            android:background="#fff"
            android:orientation="horizontal"
            android:paddingLeft="100px"
            android:paddingRight="100px">

            <RelativeLayout
                android:id="@+id/shopHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="店铺首页"
                    android:textColor="#222222"
                    android:textSize="46px" />

                <ImageView
                    android:id="@+id/indicatorShopHome"
                    android:layout_width="187px"
                    android:layout_height="16px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#7AD2D2"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/hotProject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="热门项目"
                    android:textColor="#222222"
                    android:textSize="46px" />

                <ImageView
                    android:id="@+id/indicatorHotProject"
                    android:layout_width="187px"
                    android:layout_height="16px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#7AD2D2"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/userEvaluate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="客户评价"
                    android:textColor="#222222"
                    android:textSize="46px" />

                <ImageView
                    android:id="@+id/indicatorEvaluate"
                    android:layout_width="187px"
                    android:layout_height="16px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#7AD2D2"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/CommonLine.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_marginTop="17px" />

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>

