<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="12dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sq_zhengjian"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/sq_buxhou_zhengjian_ic_d_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sq_zhengjian"
                android:layout_marginTop="@dimen/px_22"
                android:text="上传证件"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_35" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/px_130"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/px_69"
            android:background="#FFCCCCCC" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sq_ziliao"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/sq_buxhou_ziliao_ic_d_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sq_zhengjian"
                android:layout_marginTop="@dimen/px_22"
                android:text="填写资料"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_35" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/px_130"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/px_69"
            android:background="#FFCCCCCC" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sq_wait_shenhe"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/sq_buxhou_shenhe_ic_s_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sq_zhengjian"
                android:layout_marginTop="@dimen/px_22"
                android:text="等待审核"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_35" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_35"
        android:background="#e3e6e8" />

    <ImageView
        android:layout_width="@dimen/px_288"
        android:layout_height="@dimen/px_288"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_144"
        android:scaleType="fitXY"
        android:src="@mipmap/sq_shenhe_dengdai_pic_" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="
 预计审核时间：1-3工作日
    审核结果会发布APP内
 到时请重新登录查看结果
                请耐心等待"
        android:textColor="#ff222222"
        android:textSize="@dimen/px_40" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="220dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="134dp"
        android:background="@drawable/btn_yellow_solid_background"
        android:text="完成"
        android:textColor="#fff"
        android:textSize="@dimen/px_52" />
</LinearLayout>