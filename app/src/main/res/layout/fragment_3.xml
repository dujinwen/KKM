<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="12dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sq_zhengjian"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/sq_buxhou_zhengjian_ic_d_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sq_zhengjian"
                android:layout_marginTop="@dimen/px_22"
                android:text="上传证件"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_35" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/px_130"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/px_69"
            android:background="#FFCCCCCC" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sq_ziliao"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/sq_buxhou_ziliao_ic_d_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sq_zhengjian"
                android:layout_marginTop="@dimen/px_22"
                android:text="填写资料"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_35" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/px_130"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/px_69"
            android:background="#FFCCCCCC" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sq_wait_shenhe"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/sq_buxhou_shenhe_ic_s_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sq_zhengjian"
                android:layout_marginTop="@dimen/px_22"
                android:text="等待审核"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_35" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>