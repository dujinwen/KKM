<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="29px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务商圈"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49px"
            android:src="@mipmap/beautician_detail_satisfaction_ic" />

        <TextView
            android:id="@+id/tradingArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58px"
            android:layout_marginRight="43px"
            android:drawableRight="@mipmap/title_more_btn"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

    </LinearLayout>

    <View
        style="@style/CommonLine.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="29px" />

    <LinearLayout
        android:id="@+id/ll_yuyue"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="29px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可约时间"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49px"
            android:src="@mipmap/beautician_detail_date_ic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58px"
            android:layout_marginRight="43px"
            android:drawableRight="@mipmap/title_more_btn"
            android:text="3日可预约"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:background="#ECF9F9"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="29px">

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/beautician_detail_address_i"
            android:drawablePadding="36px"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170px"
            android:layout_marginRight="43px"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="29px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优         惠"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

        <TextView
            android:id="@+id/coupon"
            android:layout_width="202px"
            android:layout_height="72px"
            android:layout_marginLeft="43px"
            android:layout_marginRight="62px"
            android:background="@mipmap/beautician_details_preferential_coupon_ic"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px_40" />

        <TextView
            android:id="@+id/subtract"
            android:layout_width="202px"
            android:layout_height="72px"
            android:layout_marginLeft="43px"
            android:layout_marginRight="62px"
            android:background="@mipmap/beautician_details_preferential_subtract_ic"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/px_26" />

        <TextView
            android:id="@+id/redBao"
            android:layout_width="202px"
            android:layout_height="72px"
            android:layout_marginLeft="43px"
            android:background="@mipmap/beautician_details_preferential_money_ic"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px_40" />

    </LinearLayout>

    <View
        style="@style/CommonLine.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="29px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="29px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服         务"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

        <TextView
            android:id="@+id/serviceOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52px"
            android:drawableLeft="@mipmap/shop_for_ic"
            android:drawablePadding="14px"
            android:text="品质保障"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

        <TextView
            android:id="@+id/serviceTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33px"
            android:drawableLeft="@mipmap/shop_for_ic"
            android:drawablePadding="14px"
            android:text="随时调换"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

        <TextView
            android:id="@+id/serviceThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33px"
            android:drawableLeft="@mipmap/shop_for_ic"
            android:drawablePadding="14px"
            android:text="7天退款"
            android:textColor="#383838"
            android:textSize="@dimen/px_40" />

    </LinearLayout>
</LinearLayout>