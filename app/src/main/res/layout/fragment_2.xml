<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e6e8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="12dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sq_zhengjian"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/sq_buxhou_zhengjian_ic_d_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sq_zhengjian"
                android:layout_marginTop="@dimen/px_22"
                android:text="上传证件"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_35" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/px_130"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/px_69"
            android:background="#FFCCCCCC" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sq_ziliao"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/sq_buxhou_ziliao_ic_s_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sq_zhengjian"
                android:layout_marginTop="@dimen/px_22"
                android:text="填写资料"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_35" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/px_130"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/px_69"
            android:background="#FFCCCCCC" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sq_wait_shenhe"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/sq_buxhou_shenhe_ic_d_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sq_zhengjian"
                android:layout_marginTop="@dimen/px_22"
                android:text="等待审核"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_35" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="@dimen/px_33">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="#FF505050"
            android:textSize="@dimen/px_40" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入真实姓名"
            android:paddingLeft="@dimen/px_160"
            android:textColor="#FF222222"
            android:textSize="@dimen/px_52" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/changesex_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector1" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="#FF505050"
                android:textSize="@dimen/px_40" />

            <TextView
                android:id="@+id/changesex_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:paddingLeft="@dimen/px_160"
                android:text="男"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_52" />

            <ImageView
                android:layout_width="@dimen/px_27"
                android:layout_height="@dimen/px_52"
                android:layout_gravity="center_vertical|right"
                android:src="@mipmap/my_arrow_right" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/changebirth_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector1" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄"
                android:textColor="#FF505050"
                android:textSize="@dimen/px_40" />

            <TextView
                android:id="@+id/changebirth_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:paddingLeft="@dimen/px_160"
                android:text="选择年龄"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_52" />

            <ImageView
                android:layout_width="@dimen/px_27"
                android:layout_height="@dimen/px_52"
                android:layout_gravity="center_vertical|right"
                android:src="@mipmap/my_arrow_right" />
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="#FF505050"
            android:textSize="@dimen/px_40" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入身份证号"
            android:paddingLeft="@dimen/px_160"
            android:textColor="#FF222222"
            android:textSize="@dimen/px_52" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/changeaddress_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector1" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地"
                android:textColor="#FF505050"
                android:textSize="@dimen/px_40" />

            <TextView
                android:id="@+id/item_city_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:paddingLeft="@dimen/px_160"
                android:text="北京（仅限于北京地区）"
                android:textColor="#FF222222"
                android:textSize="@dimen/px_52" />

            <ImageView
                android:layout_width="@dimen/px_27"
                android:layout_height="@dimen/px_52"
                android:layout_gravity="center_vertical|right"
                android:src="@mipmap/my_arrow_right" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="阅读并同意《克克美 美容师入驻协议和隐私条款》" />

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/text_bg_color_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="✔"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_144"
        android:background="#FF7AD2D2"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="@dimen/px_53"
        android:visibility="visible" />
</LinearLayout>