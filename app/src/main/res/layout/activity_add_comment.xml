<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="143px">

            <include layout="@layout/layout_title_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173px"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="16px"
                    android:drawableTop="@mipmap/icon"
                    android:gravity="center"
                    android:text="好评"
                    android:textColor="#999999"
                    android:textSize="29px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="16px"
                    android:drawableTop="@mipmap/icon"
                    android:gravity="center"
                    android:text="中评"
                    android:textColor="#999999"
                    android:textSize="29px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="16px"
                    android:drawableTop="@mipmap/icon"
                    android:gravity="center"
                    android:text="差评"
                    android:textColor="#999999"
                    android:textSize="29px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="68px"
                android:paddingLeft="37px"
                android:paddingRight="37px"
                android:paddingTop="42px">

                <EditText
                    android:id="@+id/etCommentContent"
                    android:layout_width="match_parent"
                    android:layout_height="374px"
                    android:background="@drawable/shape_add_comment_edit"
                    android:gravity="top"
                    android:hint="写下您的评价内容"
                    android:lineSpacingExtra="3dp"
                    android:maxLength="500"
                    android:paddingLeft="32px"
                    android:paddingTop="30px"
                    android:textColor="@color/common_text_dark"
                    android:textColorHint="#c1c1c1"
                    android:textSize="35px" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/commentTagFlowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    app:alignContent="flex_start"
                    app:flexDirection="row"
                    app:flexWrap="wrap" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="68px"
                android:paddingLeft="37px"
                android:paddingRight="37px"
                android:paddingTop="42px">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="上传图片"
                    android:textColor="#333333"
                    android:textSize="46px" />

                <com.hualong.kekemei.view.NoScrollGridView
                    android:id="@+id/commentImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="5dp"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="68px"
                android:paddingLeft="37px"
                android:paddingRight="37px"
                android:paddingTop="42px">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店铺评价"
                    android:textColor="#333333"
                    android:textSize="46px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺环境"
                        android:textColor="#333333"
                        android:textSize="40px" />

                    <com.hualong.kekemei.view.StarBar
                        android:id="@+id/star_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="69px"
                        ratingbar:changeEnable="false"
                        ratingbar:starCount="5"
                        ratingbar:starDistance="10dp"
                        ratingbar:starEmpty="@mipmap/beautician_score_empty_ic"
                        ratingbar:starFill="@mipmap/beautician_score_full_ic"
                        ratingbar:starSize="66px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务态度"
                        android:textColor="#333333"
                        android:textSize="40px" />

                    <com.hualong.kekemei.view.StarBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="69px"
                        ratingbar:changeEnable="false"
                        ratingbar:starCount="5"
                        ratingbar:starDistance="10dp"
                        ratingbar:starEmpty="@mipmap/beautician_score_empty_ic"
                        ratingbar:starFill="@mipmap/beautician_score_full_ic"
                        ratingbar:starSize="66px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务技术"
                        android:textColor="#333333"
                        android:textSize="40px" />

                    <com.hualong.kekemei.view.StarBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="69px"
                        ratingbar:changeEnable="false"
                        ratingbar:starCount="5"
                        ratingbar:starDistance="10dp"
                        ratingbar:starEmpty="@mipmap/beautician_score_empty_ic"
                        ratingbar:starFill="@mipmap/beautician_score_full_ic"
                        ratingbar:starSize="66px" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/submitComment"
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:layout_alignParentBottom="true"
        android:background="#7AD2D2"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="52px" />
</RelativeLayout>
